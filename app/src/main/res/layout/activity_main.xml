<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnadd"
        android:layout_width="126dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnareaofcircle"
        android:layout_width="136dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:text="Area of Circle"
        app:layout_constraintEnd_toStartOf="@+id/btnreverseofnumber"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/btnadd"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnreverseofnumber"
        android:layout_width="134dp"
        android:layout_height="58dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="24dp"
        android:text="Reverse a Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnadd"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnpalindrome"
        android:layout_width="122dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Palindrome"
        app:layout_constraintBottom_toTopOf="@+id/fragmentcontainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnadd"
        app:layout_constraintVertical_bias="0.034" />


    <Button
        android:id="@+id/btnautomophic"
        android:layout_width="129dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:text="Automorphic Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnareaofcircle" />

    <Button
        android:id="@+id/btnreverseofstring"
        android:layout_width="126dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:text="Str Reverse"
        app:layout_constraintBottom_toTopOf="@+id/fragmentcontainer"
        app:layout_constraintEnd_toStartOf="@+id/btnautomophic"
        app:layout_constraintStart_toEndOf="@+id/btnpalindrome"
        app:layout_constraintTop_toBottomOf="@+id/btnreverseofnumber"
        app:layout_constraintVertical_bias="0.011" />

    <LinearLayout
        android:id="@+id/fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#76E276"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>